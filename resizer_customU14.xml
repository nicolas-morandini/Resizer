<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui">
<ribbon startFromScratch="false">
<tabs>
<tab id="CustomTab" label="Resizer">
<group id="Group2" label="Select Master">
   
<button id="Button5"
screentip="Select Master Shape - Dimensions used for resizing and importing of Images"
label=" " size="large" onAction="SelectMaster_Click" imageMso="MarginsAdjust"/>
</group>
<group id="Group3" label="Resize, Reposition">
<button id="Button6"
screentip="Resize and reposition selected shape to Master-Image dimensions"
label=" " size="large" onAction="ResizeReposition_Click" imageMso="SmartArtLargerShape"/>
<button id="Button7"
screentip="Resize and reposition multiple PPT images - Select slides on left tab"
label=" " size="large" onAction="ResizeRepositionAll" imageMso="LevelNow"/>
</group>
<group id="Group4" label="Resize, Reposition, Crop">
<button id="Button8"
screentip="Resize, reposition, crop selected shape to Master-Image dimensions"
label=" " size="large" onAction="Resize_and_Crop" imageMso="ScaleDrawingCanvas"/>
<button id="Button9"
screentip="Resize, reposition, crop multiple PPT images - Select slides on left tab"
label=" " size="large" onAction="Resize_and_Crop_all" imageMso="LevelSelection"/>
</group>
<group id="Group5" label="Send">
<button id="Button10"
screentip="Send Images back - Select slides on left tab"
label="Back" size="large" onAction="Send_to_Back" imageMso="ObjectSendBackwardOutlook"/>
<button id="Button11"
screentip="Bring Images to front - Select slides on left tab"
label="Front" size="large" onAction="Send_to_Front" imageMso="ObjectBringForward"/>
</group>
<group id="Group6" label="Remove">
<button id="Button15a"
screentip="Remove Images - Select slides on left tab"
label="  " size="large" onAction="Delete_Images" imageMso="PictureRemovePicture"/>
</group>
<group id="Group7" label="Import">
<button id="Button12a"
screentip="Create new slides from selected Images - Select master first for slidelayout and image dimension"
label=" " size="large" onAction="InsertPicturesAndCreateSlides" imageMso="ControlBoundObjectFrame"/>
<button id="Button14a"
screentip="Create new slides from selected Images - No Titles included"
label="  " size="large" onAction="InsertPictures_No_Titles_NT" imageMso="ControlUnboundObjectFrame"/>
</group>
<group id="Group8b" label="Find-Replace">
<button id="Button15b"
screentip="Find and Replace text - Select slides on left tab"
label="  " size="large" onAction="ReplaceTextInSlides" imageMso="FontsReplaceFonts"/>
</group>
<group id="Group9b" label="Create Text-Box">
<button id="Button16b"
screentip="Create Text Box"
label="  " size="large" onAction="CreateTextBox" imageMso="CustomTextBoxGallery"/>
</group>
</tab>
</tabs>
</ribbon>
</customUI>
